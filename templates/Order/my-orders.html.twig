{% extends 'base.html.twig' %}

{% block title %}Mes Commandes - EcoNutri{% endblock %}

{% block body %}

<section class="order-hero" style="background-image: url('{{ asset('images/cammandes.jpg') }}');">
    <div class="container">
        <h1 class="order-hero-title">Mes Commandes</h1>
    </div>
</section>

<div class="container mt-4">
    {% if orders is empty %}
        <div class="empty-orders">
            <div class="empty-icon">
                <i class="fas fa-shopping-bag"></i>
            </div>
            <h2>Aucune commande pour le moment</h2>
            <p>Découvrez nos produits et commencez vos achats</p>
            <a href="{{ path('app_home') }}" class="btn btn-primary">
                <i class="fas fa-shopping-cart"></i>
                Découvrir nos produits
            </a>
        </div>
    {% else %}
        <div class="orders-summary">
            <div class="summary-card">
                <div class="summary-item">
                    <span class="summary-label">Total des commandes</span>
                    <span class="summary-value">{{ orders|length }}</span>
                </div>
                <div class="summary-item">
                    <span class="summary-label">Dernière commande</span>
                    <span class="summary-value">{{ orders|first.createdAt|date('d/m/Y') }}</span>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-header-cart">
                    <tr>
                        <th>N° Commande</th>
                        <th>Date</th>
                        <th>Montant Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                    <tr>
                        <td class="order-number">
                            <i class="fas fa-receipt"></i>
                            #{{ order.id }}
                        </td>
                        <td class="order-date">
                            <i class="fas fa-calendar"></i>
                            {{ order.createdAt|date('d/m/Y H:i') }}
                        </td>
                        <td class="order-total">
                            <i class="fas fa-coins"></i>
                            {{ order.grandTotal }} TND
                        </td>
                        <td class="order-actions">
                            <a href="{{ path('app_order_details', {'id': order.id}) }}" class="btn-details">
                                <i class="fas fa-eye"></i>
                                Voir les détails
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

<style>
/* Variables CSS */
:root {
    --primary-color: #4a8c3a;
    --primary-dark: #3a6e2d;
    --primary-light: #6ba75c;
    --secondary-color: #f8f9fa;
    --text-dark: #2d3748;
    --text-light: #718096;
    --border-color: #e2e8f0;
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    --radius: 16px;
}

/* Order Hero Section */
.order-hero {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 2rem;
}

.order-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(74, 140, 58, 0.8), rgba(107, 167, 92, 0.7));
}

.order-hero-title {
    color: white;
    font-size: 2.5rem;
    font-weight: bold;
    position: relative;
    z-index: 1;
    text-align: center;
}

/* Container principal */
.container.mt-4 {
    padding: 0 1rem;
    max-width: 1200px;
}

/* État vide */
.empty-orders {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
}

.empty-icon {
    font-size: 4rem;
    color: var(--primary-light);
    margin-bottom: 1.5rem;
}

.empty-orders h2 {
    color: var(--text-dark);
    margin-bottom: 1rem;
    font-weight: 600;
}

.empty-orders p {
    color: var(--text-light);
    margin-bottom: 2rem;
    font-size: 1.1rem;
}

/* Carte de résumé */
.orders-summary {
    margin-bottom: 2rem;
}

.summary-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    background: white;
    padding: 1.5rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
}

.summary-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 12px;
}

.summary-label {
    font-weight: 600;
    color: var(--text-dark);
}

.summary-value {
    font-weight: 700;
    color: var(--primary-color);
    font-size: 1.25rem;
}

/* Table moderne */
.table-responsive {
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    margin-bottom: 2rem;
    background: white;
}

.table {
    margin-bottom: 0;
    border: none;
    width: 100%;
}

.table-header-cart {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light)) !important;
    color: white;
    border: none;
}

.table-header-cart th {
    border: none;
    padding: 1.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-align: left;
}

.table tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid var(--border-color);
}

.table tbody tr:last-child {
    border-bottom: none;
}

.table tbody tr:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.table tbody td {
    padding: 1.5rem;
    vertical-align: middle;
    border: none;
}

/* Colonnes spécifiques */
.order-number, .order-date, .order-total {
    font-weight: 500;
    color: var(--text-dark);
}

.order-number i, .order-date i, .order-total i {
    color: var(--primary-color);
    margin-right: 0.5rem;
    width: 16px;
}

.order-total {
    font-weight: 600;
    color: var(--primary-color);
    font-size: 1.1rem;
}

/* Bouton de détails */
.btn-details {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(107, 167, 92, 0.3);
    border: none;
}

.btn-details:hover {
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(107, 167, 92, 0.4);
    color: white;
    text-decoration: none;
}

/* Bouton principal */
.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    border: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(107, 167, 92, 0.3);
    text-decoration: none;
    color: white;
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(107, 167, 92, 0.4);
    color: white;
    text-decoration: none;
}

/* Responsive */
@media (max-width: 768px) {
    .order-hero-title {
        font-size: 2rem;
    }
    
    .order-hero {
        height: 250px;
    }
    
    .table-header-cart th {
        padding: 1rem;
        font-size: 0.9rem;
    }
    
    .table tbody td {
        padding: 1rem;
    }
    
    .summary-card {
        grid-template-columns: 1fr;
    }
    
    .btn-details {
        padding: 0.6rem 1rem;
        font-size: 0.8rem;
    }
    
    .order-number i, 
    .order-date i, 
    .order-total i {
        display: none;
    }
}

@media (max-width: 576px) {
    .order-hero-title {
        font-size: 1.75rem;
    }
    
    .order-hero {
        height: 200px;
    }
    
    .table-responsive {
        margin: 0 -15px;
        border-radius: 0;
    }
    
    .empty-orders {
        padding: 2rem 1rem;
    }
    
    .empty-icon {
        font-size: 3rem;
    }
}

/* Animation de chargement */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.table tbody tr {
    animation: fadeIn 0.5s ease forwards;
}

.table tbody tr:nth-child(1) { animation-delay: 0.1s; }
.table tbody tr:nth-child(2) { animation-delay: 0.2s; }
.table tbody tr:nth-child(3) { animation-delay: 0.3s; }
.table tbody tr:nth-child(4) { animation-delay: 0.4s; }
.table tbody tr:nth-child(5) { animation-delay: 0.5s; }
</style>
{% endblock %}