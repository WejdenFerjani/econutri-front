{% extends 'base.html.twig' %}

{% block title %}Confirmation de Commande - EcoNutri{% endblock %}

{% block body %}
<section class="order-hero" style="background-image: url('{{ asset('images/confirmation.jpeg') }}');">
    <div class="container">
        <div class="order-hero-content">
            <h1 class="order-hero-title">Confirmation de Commande</h1>
            <p class="order-hero-subtitle">Votre commande a été confirmée avec succès</p>
        </div>
    </div>
</section>

<div class="container order-confirmation-container">
    <!-- Bannière de confirmation -->
    <div class="confirmation-banner">
        <div class="confirmation-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="confirmation-content">
            <h2>Commande Confirmée !</h2>
            <p>Votre commande a été reçue avec succès et est en cours de préparation.</p>
        </div>
    </div>

    <div class="order-grid">
        <!-- Colonne gauche : Informations commande et livraison -->
        <div class="order-info-section">
            <!-- Détails de la commande -->
            <div class="info-card">
                <div class="card-header">
                    <i class="fas fa-receipt"></i>
                    <h2>Détails de la Commande</h2>
                </div>
                <div class="card-body">
                    <div class="info-item">
                        <div class="info-label">Numéro de commande</div>
                        <div class="info-value">#{{ order.id }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Date de commande</div>
                        <div class="info-value">{{ order.createdAt|date('d/m/Y à H:i') }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Mode de livraison</div>
                        <div class="info-value">Livraison express</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Statut</div>
                        <div class="info-value">
                            <span class="status-badge confirmed">
                                <i class="fas fa-check-circle"></i> Confirmée
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Adresse de livraison -->
            <div class="info-card">
                <div class="card-header">
                    <i class="fas fa-truck"></i>
                    <h2>Adresse de Livraison</h2>
                </div>
                <div class="card-body">
                    <div class="address-content">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <p class="address-line">{{ order.shippingAddress }}</p>
                            <p class="address-city">{{ order.shippingCity }} {{ order.shippingZipCode }}</p>
                        </div>
                    </div>
                    <div class="delivery-info">
                        <div class="delivery-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <strong>Délai de livraison estimé</strong>
                                <span>30 min - 1 heure</span>
                            </div>
                        </div>
                        <div class="delivery-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <strong>Contact livraison</strong>
                                <span>Votre numéro: {{ order.user.telephone }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne droite : Récapitulatif -->
        <div class="order-details-section">
            <!-- Récapitulatif des produits -->
            <div class="details-card">
                <div class="card-header">
                    <i class="fas fa-shopping-bag"></i>
                    <h2>Récapitulatif de la Commande</h2>
                </div>
                <div class="card-body">
                    <div class="order-products">
                        <div class="products-list">
                            {% for item in order.orderItems %}
                            <div class="product-item">
                                <div class="product-image">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <div class="product-info">
                                    <div class="product-name">{{ item.product.name }}</div>
                                    <div class="product-details">
                                        <span class="product-quantity">Quantité: {{ item.quantity }}</span>
                                        <span class="product-price">{{ item.unitPrice }} TND</span>
                                    </div>
                                </div>
                                <div class="product-total">
                                    {{ (item.unitPrice * item.quantity)|number_format(2, '.', ',') }} TND
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Résumé des prix -->
                    <div class="order-summary">
                        <div class="summary-item">
                            <span>Sous-total</span>
                            <span>{{ order.totalAmount }} TND</span>
                        </div>
                        <div class="summary-item">
                            <span>Frais de livraison</span>
                            <span>{{ order.shippingCost }} TND</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-total">
                            <span>Total TTC</span>
                            <span>{{ order.grandTotal }} TND</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations de suivi -->
            <div class="details-card">
                <div class="card-header">
                    <i class="fas fa-shipping-fast"></i>
                    <h2>Suivi de Livraison</h2>
                </div>
                <div class="card-body">
                    <div class="tracking-info">
                        <div class="tracking-steps">
                            <div class="tracking-step completed">
                                <div class="step-icon">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div class="step-content">
                                    <strong>Commande confirmée</strong>
                                    <span>Votre commande est en préparation</span>
                                </div>
                            </div>
                            <div class="tracking-step active">
                                <div class="step-icon">
                                    <i class="fas fa-utensils"></i>
                                </div>
                                <div class="step-content">
                                    <strong>En préparation</strong>
                                    <span>Nos experts préparent vos produits frais</span>
                                </div>
                            </div>
                            <div class="tracking-step">
                                <div class="step-icon">
                                    <i class="fas fa-motorcycle"></i>
                                </div>
                                <div class="step-content">
                                    <strong>En livraison</strong>
                                    <span>Votre livraison express est en route</span>
                                </div>
                            </div>
                            <div class="tracking-step">
                                <div class="step-icon">
                                    <i class="fas fa-home"></i>
                                </div>
                                <div class="step-content">
                                    <strong>Livrée</strong>
                                    <span>Commande livrée avec succès</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tracking-notice">
                        <i class="fas fa-info-circle"></i>
                        <p><strong>Livraison express :</strong> Vos plats frais vous seront livrés dans les 30 minutes à 1 heure.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="order-actions">
        <a href="{{ path('app_my_orders') }}" class="btn btn-primary">
            <i class="fas fa-list"></i>
            Voir Mes Commandes
        </a>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">
            <i class="fas fa-home"></i>
            Retour à l'Accueil
        </a>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
/* Variables CSS */
:root {
    --primary-color: #4a8c3a;
    --primary-dark: #3a6e2d;
    --primary-light: #6ba75c;
    --secondary-color: #f8f9fa;
    --text-dark: #2d3748;
    --text-light: #718096;
    --border-color: #e2e8f0;
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    --radius: 16px;
}

/* Container principal */
.order-confirmation-container {
    padding: 2rem 1rem;
    max-width: 1200px;
}

/* Section Hero */
.order-hero {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 2rem;
}

.order-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(74, 140, 58, 0.7), rgba(107, 167, 92, 0.5));
}

.order-hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
}

.order-hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.order-hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
}

/* Bannière de confirmation */
.confirmation-banner {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: white;
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin-bottom: 2rem;
    border-left: 6px solid var(--primary-color);
}

.confirmation-icon {
    font-size: 3rem;
    color: var(--primary-color);
}

.confirmation-content h2 {
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.confirmation-content p {
    color: var(--text-light);
    margin: 0;
    font-size: 1.1rem;
}

/* Grille principale */
.order-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
}

/* Cartes d'information */
.info-card, .details-card {
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.info-card:hover, .details-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
}

.card-header {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: white;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.card-header i {
    font-size: 1.25rem;
}

.card-header h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.card-body {
    padding: 1.5rem;
}

/* Éléments d'information */
.info-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
}

.info-item:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: var(--text-dark);
}

.info-value {
    color: var(--text-light);
    font-weight: 500;
}

/* Badge de statut */
.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.85rem;
}

.status-badge.confirmed {
    background: #d4edda;
    color: #155724;
}

/* Adresse de livraison */
.address-content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.address-content i {
    color: var(--primary-color);
    font-size: 1.25rem;
    margin-top: 0.25rem;
}

.address-line {
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    color: var(--text-dark);
}

.address-city {
    margin: 0;
    color: var(--text-light);
}

/* Informations de livraison */
.delivery-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.delivery-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 8px;
}

.delivery-item i {
    color: var(--primary-color);
    font-size: 1.25rem;
    width: 20px;
    text-align: center;
}

.delivery-item div {
    display: flex;
    flex-direction: column;
}

.delivery-item strong {
    color: var(--text-dark);
    font-size: 0.9rem;
}

.delivery-item span {
    color: var(--text-light);
    font-size: 0.85rem;
}

/* Liste des produits */
.products-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.product-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 12px;
}

.product-image {
    font-size: 1.5rem;
    color: var(--primary-color);
    width: 40px;
    text-align: center;
}

.product-info {
    flex: 1;
}

.product-name {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--text-dark);
}

.product-details {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--text-light);
}

.product-total {
    font-weight: 600;
    color: var(--primary-color);
    font-size: 1.1rem;
}

/* Résumé de la commande */
.order-summary {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 2px solid var(--border-color);
}

.summary-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    color: var(--text-light);
}

.summary-divider {
    height: 1px;
    background: var(--border-color);
    margin: 1rem 0;
}

.summary-total {
    display: flex;
    justify-content: space-between;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-dark);
}

/* Suivi de livraison */
.tracking-steps {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.tracking-step {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
}

.tracking-step::before {
    content: '';
    position: absolute;
    left: 12px;
    top: 40px;
    bottom: -20px;
    width: 2px;
    background: var(--border-color);
    z-index: 1;
}

.tracking-step:last-child::before {
    display: none;
}

.tracking-step.completed::before {
    background: var(--primary-color);
}

.step-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--border-color);
    color: var(--text-light);
    position: relative;
    z-index: 2;
}

.tracking-step.completed .step-icon {
    background: var(--primary-color);
    color: white;
}

.tracking-step.active .step-icon {
    background: var(--primary-light);
    color: white;
    animation: pulse 2s infinite;
}

.step-content {
    flex: 1;
}

.step-content strong {
    color: var(--text-dark);
    font-size: 1rem;
    display: block;
    margin-bottom: 0.25rem;
}

.step-content span {
    color: var(--text-light);
    font-size: 0.9rem;
}

.tracking-step.completed .step-content strong,
.tracking-step.completed .step-content span {
    color: var(--primary-color);
}

.tracking-step.active .step-content strong {
    color: var(--primary-color);
    font-weight: 700;
}

/* Notice d'information */
.tracking-notice {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background: #e3f2fd;
    border-radius: 8px;
    margin-top: 1.5rem;
    border-left: 4px solid #2196f3;
}

.tracking-notice i {
    color: #2196f3;
    font-size: 1.25rem;
    margin-top: 0.125rem;
}

.tracking-notice p {
    margin: 0;
    color: #1565c0;
    font-size: 0.9rem;
    line-height: 1.4;
}

.tracking-notice p strong {
    color: #0d47a1;
}

/* Animation de pulse */
@keyframes pulse {
    0% {
        box-shadow: 0 0 0 0 rgba(107, 167, 92, 0.4);
    }
    70% {
        box-shadow: 0 0 0 10px rgba(107, 167, 92, 0);
    }
    100% {
        box-shadow: 0 0 0 0 rgba(107, 167, 92, 0);
    }
}

/* Actions */
.order-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: white;
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(107, 167, 92, 0.4);
    color: white;
}

.btn-secondary {
    background: white;
    color: var(--text-dark);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    color: var(--text-dark);
}

/* Responsive */
@media (max-width: 968px) {
    .order-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .order-hero-title {
        font-size: 2rem;
    }
    
    .order-hero {
        height: 250px;
    }
    
    .confirmation-banner {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }
}

@media (max-width: 576px) {
    .order-hero-title {
        font-size: 1.75rem;
    }
    
    .order-hero-subtitle {
        font-size: 1rem;
    }
    
    .card-header, .card-body {
        padding: 1.25rem;
    }
    
    .product-item {
        flex-direction: column;
        text-align: center;
        gap: 0.75rem;
    }
    
    .product-details {
        justify-content: center;
    }
    
    .delivery-info {
        gap: 0.75rem;
    }
    
    .delivery-item {
        flex-direction: column;
        text-align: center;
        gap: 0.5rem;
    }
    
    .tracking-step {
        flex-direction: column;
        text-align: center;
        gap: 0.75rem;
    }
    
    .tracking-step::before {
        left: 50%;
        top: 40px;
        bottom: -20px;
        transform: translateX(-50%);
    }
    
    .order-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .btn {
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }
}
</style>
{% endblock %}