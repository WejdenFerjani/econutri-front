{% extends 'base.html.twig' %}

{% block title %}Détails de la Commande - EcoNutri{% endblock %}

{% block body %}    
    <section class="order-hero" style="background-image: url('{{ asset('images/order-banner.jpg') }}');">
        <div class="container">
            <div class="order-hero-content">
                <h1 class="order-hero-title">Détails de la Commande</h1>
                <p class="order-hero-subtitle">N° {{ order.id }}</p>
            </div>
        </div>
    </section>

    <div class="container order-details-container">
        <div class="order-grid">
            <!-- Colonne gauche: Informations client et livraison -->
            <div class="order-info-section">
                <div class="info-card">
                    <div class="card-header">
                        <i class="fas fa-user-circle"></i>
                        <h2>Informations Client</h2>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <div class="info-label">Nom complet</div>
                            <div class="info-value">{{ order.user.nom }} {{ order.user.prenom }}</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Email</div>
                            <div class="info-value">{{ order.user.email }}</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Téléphone</div>
                            <div class="info-value">{{ order.user.telephone }}</div>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-header">
                        <i class="fas fa-truck"></i>
                        <h2>Adresse de Livraison</h2>
                    </div>
                    <div class="card-body">
                        <div class="address-content">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <p class="address-line">{{ order.shippingAddress }}</p>
                                <p class="address-city">{{ order.shippingCity }} {{ order.shippingZipCode }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Colonne droite: Détails de la commande -->
            <div class="order-details-section">
                <div class="details-card">
                    <div class="card-header">
                        <i class="fas fa-receipt"></i>
                        <h2>Détails de la Commande</h2>
                    </div>
                    <div class="card-body">
                        <!-- Statut de la commande -->
                        <div class="order-status">
                            <div class="status-label">Statut de la commande</div>
                            <div class="status-value">
                                {% if order.status == 'pending' %}
                                    <span class="status-badge pending">
                                        <i class="fas fa-clock"></i> En attente
                                    </span>
                                {% elseif order.status == 'confirmed' %}
                                    <span class="status-badge confirmed">
                                        <i class="fas fa-check-circle"></i> Confirmée
                                    </span>
                                {% elseif order.status == 'delivered' %}
                                    <span class="status-badge delivered">
                                        <i class="fas fa-shipping-fast"></i> Livrée
                                    </span>
                                {% else %}
                                    <span class="status-badge cancelled">
                                        <i class="fas fa-times-circle"></i> Annulée
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Produits de la commande -->
                        <div class="order-products">
                            <h3>Articles commandés</h3>
                            <div class="products-list">
                                {% for item in order.orderItems %}
                                <div class="product-item">
                                    <div class="product-info">
                                        <div class="product-name">{{ item.product.name }}</div>
                                        <div class="product-quantity">Quantité: {{ item.quantity }}</div>
                                    </div>
                                    <div class="product-pricing">
                                        <div class="product-price">{{ item.unitPrice }} TND</div>
                                        <div class="product-total">{{ (item.unitprice * item.quantity)|number_format(2, '.', ',') }} TND</div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Résumé des prix -->
                        <div class="order-summary">
                            <div class="summary-item">
                                <span>Sous-total</span>
                                <span>{{ order.totalAmount }} TND</span>
                            </div>
                            <div class="summary-item">
                                <span>Frais de livraison</span>
                                <span>{{ order.shippingCost }} TND</span>
                            </div>
                            <div class="summary-divider"></div>
                            <div class="summary-total">
                                <span>Total</span>
                                <span>{{ order.grandTotal }} TND</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bouton de retour -->
        <div class="order-actions">
            <a href="{{ path('app_my_orders') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Retour à Mes Commandes
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
/* Variables CSS */
:root {
    --primary-color: #4a8c3a;
    --primary-dark: #3a6e2d;
    --primary-light: #6ba75c;
    --secondary-color: #f8f9fa;
    --text-dark: #2d3748;
    --text-light: #718096;
    --border-color: #e2e8f0;
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    --radius: 16px;
}

/* Reset et base */
.container.order-details-container {
    padding: 2rem 1rem;
    max-width: 1200px;
}

/* Section Hero */
.order-hero {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 2rem;
}

.order-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* Opacité réduite du vert - de 0.8/0.7 à 0.5/0.4 */
    background: linear-gradient(135deg, rgba(74, 140, 58, 0.5), rgba(107, 167, 92, 0.4));
}

.order-hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
}

.order-hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.order-hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
}

/* Grille principale */
.order-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
}

/* Cartes d'information */
.info-card, .details-card {
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.info-card:hover, .details-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
}

.card-header {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: white;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.card-header i {
    font-size: 1.25rem;
}

.card-header h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.card-body {
    padding: 1.5rem;
}

/* Éléments d'information */
.info-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
}

.info-item:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: var(--text-dark);
}

.info-value {
    color: var(--text-light);
}

/* Adresse de livraison */
.address-content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.address-content i {
    color: var(--primary-color);
    font-size: 1.25rem;
    margin-top: 0.25rem;
}

.address-line {
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    color: var(--text-dark);
}

.address-city {
    margin: 0;
    color: var(--text-light);
}

/* Statut de la commande */
.order-status {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 12px;
    margin-bottom: 1.5rem;
}

.status-label {
    font-weight: 600;
    color: var(--text-dark);
}

.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.85rem;
}

.status-badge.pending {
    background: #fff3cd;
    color: #856404;
}

.status-badge.confirmed {
    background: #d1ecf1;
    color: #0c5460;
}

.status-badge.delivered {
    background: #d4edda;
    color: #155724;
}

.status-badge.cancelled {
    background: #f8d7da;
    color: #721c24;
}

/* Liste des produits */
.order-products h3 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: var(--text-dark);
    font-weight: 600;
}

.products-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.product-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 12px;
}

.product-info {
    flex: 1;
}

.product-name {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--text-dark);
}

.product-quantity {
    font-size: 0.9rem;
    color: var(--text-light);
}

.product-pricing {
    text-align: right;
}

.product-price {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 0.25rem;
}

.product-total {
    font-weight: 600;
    color: var(--primary-color);
}

/* Résumé de la commande */
.order-summary {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 2px solid var(--border-color);
}

.summary-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    color: var(--text-light);
}

.summary-divider {
    height: 1px;
    background: var(--border-color);
    margin: 1rem 0;
}

.summary-total {
    display: flex;
    justify-content: space-between;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-dark);
}

/* Actions */
.order-actions {
    display: flex;
    justify-content: center;
}

.btn-back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: white;
    color: var(--text-dark);
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
}

.btn-back:hover {
    background: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

/* Responsive */
@media (max-width: 968px) {
    .order-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .order-hero-title {
        font-size: 2rem;
    }
    
    .order-hero {
        height: 250px;
    }
}

@media (max-width: 576px) {
    .order-hero-title {
        font-size: 1.75rem;
    }
    
    .order-hero-subtitle {
        font-size: 1rem;
    }
    
    .card-header, .card-body {
        padding: 1.25rem;
    }
    
    .info-item, .order-status {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .product-item {
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .product-pricing {
        text-align: left;
        display: flex;
        justify-content: space-between;
    }
}
</style>
{% endblock %}