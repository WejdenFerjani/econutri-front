            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}#about">À Propos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown">
                            Produits
                        </a>
                        
                            <ul class="dropdown-menu">
                                {% for cat in get_categories() %}
                                    <li><a class="dropdown-item" href="{{ path('app_category', {id: cat.id}) }}">{{ cat.name }}</a></li>
                                {% endfor %}
                            </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Conseils</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Réclamation</a>
                    </li>
                </ul>
                
                <div class="navbar-nav">
                    {% if app.user %}
                        <!-- Icône Mon Compte -->
                        <a class="nav-link" href="{{ path('app_account') }}" title="Mon Compte">
                            <span class="d-none d-sm-inline">Mon Compte</span>
                            <i class="fas fa-user-circle fa-lg ms-1"></i>
                        </a>
                        <!-- Icône Déconnexion -->
                        <a class="nav-link" href="{{ path('app_logout') }}" title="Déconnexion">
                            <span class="d-none d-sm-inline">Déconnexion</span>
                            <i class="fas fa-sign-out-alt ms-1"></i>
                        </a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt me-1"></i>Connexion
                        </a>
                        <a class="nav-link" href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus me-1"></i>Inscription
                        </a>
                    {% endif %}
                    <!-- Icône Panier -->
                    <a class="nav-link" href="{{ path('app_cart_index') }}" title="Panier">
                        <span class="d-none d-sm-inline">Panier</span>
                        <i class="fas fa-shopping-cart ms-1"></i>
                        <span class="badge bg-success">0</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Product Detail Section -->
    <section class="product-detail-section">
        <div class="container">
            {# Breadcrumb removed per request (Accueil / Catégorie / Produit) #}
            
            <div class="row">
                <div class="col-lg-8">
                        <div class="product-card-detail">
                        <div class="product-image-large" style="background-image: url('{{ asset('images/' ~ product.image) }}');"></div>
                    </div>
                </div>
                
                <!-- Sidebar - Product Actions -->
                <div class="col-lg-4">
                    <div class="product-info">
                        <h1 class="product-title">{{ product.name }}</h1>
                        <div class="product-price">{{ product.price }} TND</div>

                        {# Short description under title (first 200 chars) #}
                        {% if product.description %}
                            <p class="product-short-description mt-2">{{ product.description|length > 200 ? product.description|slice(0,200) ~ '...' : product.description }}</p>
                        {% endif %}

                        <!-- Visible product metadata: Category + Origin + Unit + Stock + Available since -->
                        <div class="product-meta-grid" style="margin-top:1rem;">
                            <div class="meta-item">
                                <div class="meta-label">Catégorie</div>
                                <div class="meta-value">{{ product.category.name }}</div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Origine</div>
                                <div class="meta-value">{{ product.origin ?: 'Local' }}</div>
                            </div>
                            {# Unité removed per request - show season elsewhere if needed #}
                            <div class="meta-item">
                                <div class="meta-label">Stock</div>
                                <div class="meta-value">{{ product.stock|default('—') }} disponibles
                                </div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Disponibilité</div>
                                <div class="meta-value">
                                    {% if (product.stock|default(0)) > 10 %}
                                        <span class="availability-badge availability-in">En stock</span>
                                    {% elseif (product.stock|default(0)) > 0 %}
                                        <span class="availability-badge availability-low">Stock faible</span>
                                    {% else %}
                                        <span class="availability-badge availability-out">Rupture</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Saisonnalité removed per option C (do not display) #}
                        </div>
                        
                        <p class="product-description">{{ product.description }}</p>

                        <!-- Quantity Selector -->
                        <div class="quantity-selector">
                            <span>Quantité :</span>
                            <div role="button" tabindex="0" class="quantity-btn" aria-label="Réduire la quantité">-</div>
                            <input type="number" class="quantity-input" value="1" min="1" max="{{ product.stock|default(1) }}">
                            <div role="button" tabindex="0" class="quantity-btn" aria-label="Augmenter la quantité">+</div>
                        </div>

                        <!-- Action Buttons - Using product.id -->
                        {% if (product.stock|default(0)) > 0 %}
                            <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="POST" class="d-inline w-100 add-to-cart-form mb-2">
                                <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart_' ~ product.id) }}">
                                {# Hidden quantity field updated by JS from the visible quantity-input #}
                                <input type="hidden" name="quantity" class="quantity-hidden" value="1">
                                <button type="submit" class="btn btn-add-cart-large">
                                    <i class="fas fa-shopping-cart me-2"></i>
                                    Ajouter au panier
                                </button>
                            </form>

                            {# Wishlist removed per request #}
                        {% else %}
                            <button class="btn btn-add-cart-large disabled" disabled>
                                <i class="fas fa-shopping-cart me-2"></i>
                                Rupture de stock
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Related Products -->
            <div class="related-products">
                <h3 class="section-title">Produits similaires</h3>
                <div class="row">
                    {% for relatedProduct in relatedProducts %}
                    <div class="col-md-3">
                        <div class="product-card">
                            <div class="product-image" style="background-image: url('{{ asset('images/' ~ relatedProduct.image) }}');"></div>
                            <h4 class="product-name">{{ relatedProduct.name }}</h4>
                            <p class="product-description">{{ relatedProduct.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="product-price">{{ relatedProduct.price }} TND</span>
                            </div>
                            <!-- UPDATED: Using relatedProduct.id instead of slug -->
                            <a href="{{ path('app_product', {id: relatedProduct.id}) }}" class="btn btn-add-cart mt-3">
                                <i class="fas fa-eye me-2"></i>Voir
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; 2024 EcoNutri. Tous droits réservés.</p>
            <div class="mt-3">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Quantity selector functionality (robust)
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInput = document.querySelector('.quantity-input');
            const btns = Array.from(document.querySelectorAll('.quantity-btn'));
            if (!quantityInput || btns.length < 2) return;

            const [minusBtn, plusBtn] = btns;

            function setValue(newVal) {
                const min = parseInt(quantityInput.min) || 1;
                const max = parseInt(quantityInput.max) || 1;
                let v = parseInt(newVal) || min;
                if (v < min) v = min;
                if (v > max) v = max;
                quantityInput.value = v;
            }

            minusBtn.addEventListener('click', function() {
                const cur = parseInt(quantityInput.value) || 1;
                setValue(cur - 1);
            });
            plusBtn.addEventListener('click', function() {
                const cur = parseInt(quantityInput.value) || 1;
                setValue(cur + 1);
            });

            // allow keyboard +/- when focused
            minusBtn.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); minusBtn.click(); }
            });
            plusBtn.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); plusBtn.click(); }
            });

            // keep value within bounds when user types directly
            quantityInput.addEventListener('change', function() {
                setValue(quantityInput.value);
            });

            // sync visible quantity into hidden form field before submit
            const addToCartForm = document.querySelector('.add-to-cart-form');
            if (addToCartForm) {
                addToCartForm.addEventListener('submit', function(e) {
                    const hidden = addToCartForm.querySelector('.quantity-hidden');
                    if (hidden) {
                        hidden.value = quantityInput.value;
                    }
                });
            }
        });
    </script>
</body>
</html>